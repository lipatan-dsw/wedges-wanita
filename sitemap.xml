---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
    {% for post in site.posts %}
    <url>
        <loc>{{site.url}}{{site.baseurl}}{{ post.url | remove: 'index.html' }}</loc>
        <image:image>
            <image:loc>{%if post.image %}{{ post.image }}{% else %}{{ site.url }}/{{ site.logo-square }}{% endif %}</image:loc>
        </image:image>
    </url>
    {% endfor %}

    {% for page in site.pages %}
    {% if page.layout != nil %}
    {% if page.layout != 'feed' %}
    <url>
        <loc>{{site.url}}{{site.baseurl}}{{ page.url | remove: 'index.html' }}</loc>
        <image:image>
            <image:loc>{%if page.image %}{{ page.image }}{% else %}{{ site.url }}/{{ site.logo-square }}{% endif %}</image:loc>
        </image:image>
    </url>
    {% endif %}
    {% endif %}
    {% endfor %}
</urlset>